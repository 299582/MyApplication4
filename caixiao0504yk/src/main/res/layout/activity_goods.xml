<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.caixiao0504yk.GoodsActivity">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"></android.support.v4.view.ViewPager>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/lin_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></LinearLayout>
            </FrameLayout>

            <com.example.caixiao0504yk.MyList
                android:id="@+id/listview_first"

                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.example.caixiao0504yk.MyList>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>



</LinearLayout>
