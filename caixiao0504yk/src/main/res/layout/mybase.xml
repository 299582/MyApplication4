<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_tab"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/text_title_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_tab"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/imageView_tab"
        android:layout_toRightOf="@+id/imageView_tab"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_name_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_tab"
        android:layout_toEndOf="@+id/imageView_tab"
        android:layout_toRightOf="@+id/imageView_tab"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_time_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_name_tab"
        android:layout_alignBottom="@+id/text_name_tab"
        android:layout_toEndOf="@+id/text_name_tab"
        android:layout_toRightOf="@+id/text_name_tab"
        android:text="TextView" />
</RelativeLayout>